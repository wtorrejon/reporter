<Layout title="404">
  <main class="grid min-h-full place-items-center bg-white px-6 py-24 sm:py-32 lg:px-8">
    <div class="text-center">
      <h1 class=" font-[poppins] mt-4 text-balance text-5xl font-semibold tracking-tight text-gray-900 sm:text-7xl">Cabieses <p>App Center</p></h1>
